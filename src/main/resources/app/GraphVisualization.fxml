<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GraphVisualizationController">
    <Button fx:id="backButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="26.0" prefWidth="28.0">
        <graphic>
            <ImageView fitHeight="16.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../icons/back.png" />
            </ImageView>
        </graphic>
    </Button>
    <Pane fx:id="graphPane" layoutX="75.0" layoutY="100.0" prefHeight="400.0" prefWidth="600.0" style="-fx-border-color: black; -fx-border-width: 1;">
    </Pane>
    <Canvas fx:id="graphCanvas" height="400.0" layoutX="75.0" layoutY="100.0" onMouseClicked="#handleCanvasClick" width="750.0" />
    <Text fx:id="resultText" layoutX="705.0" layoutY="330.0" wrappingWidth="120.0">
        <font>
            <Font name="Arial" size="14" />
        </font>
    </Text>
    <Label layoutX="120.0" layoutY="19.0" text="Select one node to get the paths to all the other nodes" />
    <Label layoutX="120.0" layoutY="40.0" text="Select two nodes to get the path between them" />
</AnchorPane>
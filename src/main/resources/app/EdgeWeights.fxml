<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EdgeWeightsController">
    <Button fx:id="backButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleBackButton"
            prefHeight="26.0" prefWidth="28.0">
        <graphic>
            <ImageView fitHeight="16.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../icons/back.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Label layoutX="102.0" layoutY="30.0" styleClass="title-label" text="Please enter the weights of the edges">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <ScrollPane layoutX="59.0" layoutY="71.0" prefHeight="284.0" prefWidth="495.0">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="1000.0" prefWidth="1000.0">
            <GridPane fx:id="verticesGrid" layoutX="22.0" layoutY="45.0" prefHeight="250.0" prefWidth="150.0">
            </GridPane>
            <GridPane fx:id="weightsGrid" layoutX="87.0" layoutY="45.0" prefHeight="250.0" prefWidth="300.0">
            </GridPane>
        </AnchorPane>
    </ScrollPane>
    <Button fx:id="nextButton" layoutX="503.0" layoutY="362.0" mnemonicParsing="false" onAction="#handleNextButton"
            prefHeight="26.0" prefWidth="50.0" text="Next"/>
</AnchorPane>
